package workshop_2;

public class Boat {
	
	public String typeOfBoat; //Sailboat, Motorsailer, kayak/Canoe, Other 
	public String lengthOfBoat; //Length of boat in cm
	
	public Boat(String typeOfBoat, String lengthOfBoat){
		this.typeOfBoat = typeOfBoat;
		this.lengthOfBoat = lengthOfBoat;
	}
	
	public String getType(){
		return typeOfBoat;
	}
	public String getLength(){
		return lengthOfBoat;
	}
	public void setType(String typeOfBoat){
		this.typeOfBoat = typeOfBoat;
	}
	public void setLength(String lengthOfBoat){
		this.lengthOfBoat = lengthOfBoat;
	}
	private static Boolean correctLength(String input) {
		System.out.println(input);
		try{
			if( input.matches("[0-9 . ,]+")){
				return true;	
			}
			else{
				throw new Exception();
			}	
		}catch (Exception e) {
			System.err.println("Not acceptable length!");
			return false;
		}
		
	}
}
